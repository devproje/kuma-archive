{
	"name": "kuma-archive",
	"version": "0.1.0-alpha.1",
	"type": "module",
	"license": "MIT",
	"scripts": {
		"build:view": "tsc -b && vite build",
		"build:server": "sh ./scripts/build.sh",
		"build": "bun run build:view && bun run build:server",
		"dev:view": "vite",
		"dev:server": "sh ./scripts/build.sh --run --api-only",
		"dev": "bun run build:view && sh ./scripts/build.sh --run",
		"package": "sh ./scripts/package.sh",
		"lint": "eslint .",
		"preview": "vite preview",
		"clean": "rm -rf kuma-archive web/"
	},
	"dependencies": {
		"bootstrap": "^5.3.3",
		"lucide-react": "^0.482.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-markdown": "^10.1.0",
		"react-router": "^7.3.0",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react-swc": "^3.8.0",
		"eslint": "^9.21.0",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^15.15.0",
		"sass": "^1.85.1",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.2.0"
	}
}
